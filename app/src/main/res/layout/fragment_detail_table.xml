<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng còn trống"
                android:textColor="#fa012a"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:id="@+id/textThongbao_detailtable"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listviewGioHang_detailtable"
                >

            </ListView>

        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            >
            <TextView
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="24sp"
                android:text="Tổng Tiền: "
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTongTienGioHang_detailtable"
                android:text="1 triệu"
                android:textColor="#0015ff"
                android:textSize="24sp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThanhtoangiohang_detailtable"
            android:text="Thanh toán"
            android:textSize="18sp"

            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="@drawable/border_white"
            android:textColor="#fff"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTieptucgiohang_detailtable"
            android:text="Chọn món"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/boder_red"
            android:textColor="#fff"
            android:padding="20dp"

            />
    </LinearLayout>

</LinearLayout>